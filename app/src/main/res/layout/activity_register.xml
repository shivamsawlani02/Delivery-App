<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true"
    android:padding="16dp">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_230sdp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="48dp"
                android:fontFamily="sans-serif-black"
                android:text="@string/almost_there"
                android:textColor="#100404"
                android:textSize="@dimen/_25sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="250dp"
                android:layout_height="190dp"
                android:layout_marginStart="228dp"
                android:layout_marginLeft="228dp"
                android:src="@drawable/humaaan_4"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="82dp"

                android:layout_height="132dp"
                android:layout_marginStart="348dp"
                android:layout_marginLeft="348dp"
                android:layout_marginBottom="208dp"
                android:src="@drawable/leaf3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>

            <ImageView
                android:layout_width="180dp"
                android:layout_height="189dp"

                android:layout_marginEnd="100dp"
                android:layout_marginRight="100dp"
                android:layout_marginBottom="116dp"
                android:src="@drawable/leaf_bottom3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView10"></ImageView>

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="100dp"

                android:layout_height="80dp"
                android:layout_marginStart="300dp"
                android:layout_marginLeft="300dp"
                android:layout_marginBottom="244dp"
                android:src="@drawable/leave_the_leaf_3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"></ImageView>

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="200dp"

                android:layout_height="230dp"
                android:layout_marginEnd="184dp"
                android:layout_marginRight="184dp"
                android:layout_marginBottom="156dp"
                android:src="@drawable/leaf_bottom33"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView8"></ImageView>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_8sdp">

        <TextView
            android:id="@+id/register_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/alfa_slab_one"
            android:text="@string/register"
            android:textColor="#0c0f0f"
            android:textSize="20dp"
            android:transitionName="trans2">

        </TextView>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:background="@drawable/curve_rec_background"
            android:elevation="4dp"
            android:hint="@string/enter_name"
            android:theme="@style/AppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"

                android:inputType="textPersonName"
                android:password="false">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/curve_rec_background"
            android:elevation="4dp"
            android:hint="@string/enter_email"
            android:theme="@style/AppTheme">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins"

                android:inputType="textEmailAddress"
                android:password="false">

            </com.google.android.material.textfield.TextInputEditText>
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>


    <Button
        android:id="@+id/nxt_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@drawable/curve_rec_background"
        android:backgroundTint="@color/blue"
        android:elevation="8dp"
        android:fontFamily="@font/poppins"
        android:text="continue"
        android:textColor="@color/white"
        android:transitionName="trans4">

    </Button>


</LinearLayout>
</ScrollView>