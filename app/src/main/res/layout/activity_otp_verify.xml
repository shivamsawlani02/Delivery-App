<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_250sdp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="258dp"
                android:layout_height="33dp"
                android:layout_marginStart="86dp"
                android:fontFamily="@font/abril_fatface"
                android:text="@string/few_more_steps"
                android:textColor="#090101"
                android:textSize="@dimen/_20sdp"
                app:layout_constraintBottom_toTopOf="@+id/imageView3"
                app:layout_constraintStart_toStartOf="parent" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="@dimen/_149sdp"
                android:layout_height="@dimen/_125sdp"
                android:layout_marginStart="@dimen/_210sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_130sdp"
                android:src="@drawable/fill_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="210dp"
                android:layout_height="253dp"
                android:layout_marginEnd="48dp"
                android:layout_marginRight="48dp"
                android:layout_marginBottom="16dp"
                android:src="@drawable/humaaan_12"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView5">

            </ImageView>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="115dp"
                android:layout_height="131dp"
                android:layout_marginEnd="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="136dp"
                android:src="@drawable/leaf2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/imageView">

            </ImageView>

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="90dp"
                android:layout_height="103dp"
                android:layout_marginStart="352dp"
                android:layout_marginLeft="352dp"
                android:layout_marginBottom="84dp"
                android:src="@drawable/leaf_bottom"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_94sdp"
                android:layout_height="@dimen/_104sdp"
                android:layout_marginStart="344dp"
                android:layout_marginLeft="344dp"
                android:src="@drawable/leaf_bottom_1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            </ImageView>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="@dimen/_62sdp"
                android:layout_height="@dimen/_81sdp"
                android:layout_marginEnd="@dimen/_280sdp"
                android:layout_marginRight="@dimen/_364sdp"
                android:layout_marginBottom="@dimen/_142sdp"
                android:src="@drawable/leave_the_leaf_2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

            </ImageView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/your_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="sans-serif-black"
            android:text="VERIFICATION"
            android:textSize="@dimen/_15sdp"
            android:transitionName="trans2">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/abril_fatface"
            android:text="@string/entered_mobile_number"
            android:textSize="@dimen/_15sdp">

        </TextView>

        <TextView
            android:id="@+id/getting_number"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:textColor="#15aae6"
            android:textSize="@dimen/_15sdp">

        </TextView>

        <TextView
            android:id="@+id/text_opt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:text="@string/enter_otp"
            android:textColor="#090a0a">

        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:isScrollContainer="false"
        android:orientation="vertical"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <in.aabhasjindal.otptextview.OtpTextView
                android:id="@+id/otp_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:bar_enabled="true"
                android:layout_gravity="center_horizontal"
                app:bar_height="2dp"
                android:transitionName="trans5"
                app:height="40dp"
                app:length="6"
                app:otp_text_size="24dp"
                app:width="40dp">

            </in.aabhasjindal.otptextview.OtpTextView>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="176dp"
                    android:layout_marginRight="176dp"
                    android:layout_marginBottom="12dp"
                    android:text="Resend the code again in "
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                </TextView>

                <com.dhruv.timerbutton.TimerButton
                    android:id="@+id/timer"
                    android:layout_width="223dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginRight="32dp"
                    app:animationBackground="@android:color/transparent"
                    app:animationCompleteText="RESEND"
                    app:buttonBackground="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:textColor="#15aae6">

                </com.dhruv.timerbutton.TimerButton>
            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>




    </LinearLayout>

    <ProgressBar
        android:id="@+id/btn_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_8sdp"
        android:text="continue"
        android:transitionName="trans4">

    </ProgressBar>

    <TextView
        android:id="@+id/warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_4sdp"
        android:text="WRONG OTP"
        android:textColor="#fc0303">

    </TextView>


</LinearLayout>